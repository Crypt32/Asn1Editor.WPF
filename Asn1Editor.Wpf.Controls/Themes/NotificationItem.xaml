<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SysadminsLV.Asn1Editor.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Shared.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="NotificationItemFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="2"
                               StrokeThickness="1"
                               Stroke="Black"
                               StrokeDashArray="1 2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:NotificationItem}">
        <Setter Property="FocusVisualStyle" Value="{StaticResource NotificationItemFocusVisual}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:NotificationItem}">
                    <Grid>
                        <Border x:Name="BdTopLeft"
                                BorderThickness="1,1,0,0"
                                Background="Transparent"/>
                        <Border x:Name="BdBottomRight"
                                BorderThickness="0,0,1,1"
                                Background="Transparent"/>
                        <Border Padding="4"
                                BorderThickness="1"
                                Background="{TemplateBinding Background}">
                            <DockPanel Background="{TemplateBinding Background}">
                                <Image x:Name="Icon"
                                       DockPanel.Dock="Left"
                                       Margin="0, 0,4,0"
                                       Width="16"
                                       Height="16"
                                       Source="{TemplateBinding Icon}"
                                       VerticalAlignment="Top"/>
                                <Button x:Name="DismissButton"
                                        DockPanel.Dock="Right"
                                        Width="16"
                                        Height="16"
                                        Margin="4,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource ToolBarButtonStyle}"
                                        Command="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DismissCommand}"
                                        Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsDismissable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Path x:Name="DismissGlyph"
                                          Data="F1M0,0L2,0 5,3 8,0 10,0 6,4 10,8 8,8 5,5 2,8 0,8 4,4 0,0z"
                                          Fill="#FF5F6FA4"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                                </Button>

                                <!-- Main Content -->
                                <ContentPresenter VerticalAlignment="Top"/>
                            </DockPanel>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger SourceName="Icon" Property="Source" Value="{x:Null}">
                            <Setter TargetName="Icon" Property="Width" Value="0"/>
                        </Trigger>
                        <!-- Notification Type -->
                        <Trigger Property="Kind" Value="Info">
                            <Setter Property="Background" Value="#FFCCE5FF "/>
                            <Setter TargetName="BdTopLeft" Property="BorderBrush" Value="#B0CCE5FF"/>
                            <Setter TargetName="BdBottomRight" Property="BorderBrush" Value="#C1DBF7"/>
                            <Setter TargetName="DismissGlyph" Property="Fill" Value="#004085 "/>
                        </Trigger>
                        <Trigger Property="Kind" Value="Success">
                            <Setter Property="Background" Value="#FFD4EDDA"/>
                            <Setter TargetName="BdTopLeft" Property="BorderBrush" Value="#80D4EDDA"/>
                            <Setter TargetName="BdBottomRight" Property="BorderBrush" Value="#FFC6E5CD"/>
                            <Setter TargetName="DismissGlyph" Property="Fill" Value="#155724  "/>
                        </Trigger>
                        <Trigger Property="Kind" Value="Warning">
                            <Setter Property="Background" Value="#FFFDFAB1"/>
                            <Setter TargetName="BdTopLeft" Property="BorderBrush" Value="#80FEFEDF"/>
                            <Setter TargetName="BdBottomRight" Property="BorderBrush" Value="#FFF3F0AA"/>
                            <Setter TargetName="DismissGlyph" Property="Fill" Value="#856404  "/>
                        </Trigger>
                        <Trigger Property="Kind" Value="Danger">
                            <Setter Property="Background" Value="#FFFFCDD2"/>
                            <Setter TargetName="BdTopLeft" Property="BorderBrush" Value="#B0FFCDD2"/>
                            <Setter TargetName="BdBottomRight" Property="BorderBrush" Value="#FFF2C0C5"/>
                            <Setter TargetName="DismissGlyph" Property="Fill" Value="#721c24  "/>
                        </Trigger>

                        <!-- Dismissed state -->
                        <Trigger Property="IsDismissed" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>